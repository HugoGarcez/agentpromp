generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Company {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  config    AgentConfig?
  
  // New Relations
  specialists      Specialist[]
  appointmentTypes AppointmentType[]
  appointments     Appointment[]
  googleConfig     GoogleCalendarConfig?
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("USER") // ADMIN, USER
  companyId String
  company   Company  @relation(fields: [companyId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Password Reset
  resetToken        String? // Hashed or raw token
  resetTokenExpires DateTime?
}

model AgentConfig {
  id           String   @id @default(uuid())
  companyId    String   @unique
  company      Company  @relation(fields: [companyId], references: [id])
  systemPrompt String?
  persona      String?  // JSON
  integrations String?  // JSON
  products     String?  // JSON
  knowledgeBase String? // JSON - Files text and Scraped URLs
  
  // Promp API Integration
  prompIdentity String?
  prompConnectionId String? // NEW: Binds AI to a specific Session/Channel ID
  prompUuid     String?
  prompToken    String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  history      PromptHistory[]
  
  // Follow-up Config
  followUpConfig String? // JSON: { enabled, attempts: [], tone: '' }
}

model ContactState {
    id String @id @default(uuid())
    companyId String
    remoteJid String // Phone Number
    
    lastOutbound DateTime? // When did we last message them?
    nextFollowUp DateTime? // When is the next AI msg scheduled?
    attemptIndex Int @default(0) // 0 to 4
    isActive Boolean @default(false) // Is the sequence running?
    metadata String? // JSON: { name: 'Hugo', context: 'Sales' }
    
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([companyId, remoteJid])
}

model PromptHistory {
  id            String      @id @default(uuid())
  agentConfigId String
  agentConfig   AgentConfig @relation(fields: [agentConfigId], references: [id], onDelete: Cascade)
  systemPrompt  String?
  createdAt     DateTime    @default(now())
}



model TestMessage {
  id        String   @id @default(uuid())
  companyId String
  sender    String   // 'user' | 'ai'
  text      String
  sessionId String?  // Optional: For grouping messages by ticket/session (e.g. from Webhook)
  owner     String?  // The bot number this message belongs to
  metadata  String?  // Optional: JSON string for extra data (e.g. n8n payload)
  createdAt DateTime @default(now())
}

model GlobalConfig {
  id                String   @id @default(uuid())
  openaiKey         String?
  geminiKey         String?
  elevenLabsKey     String?
  elevenLabsVoiceId String?
  
  // Google Calendar Integration
  googleClientId     String?
  googleClientSecret String?
  googleRedirectUri  String?

  updatedAt         DateTime @updatedAt
}

model ProductSource {
  id        String   @id @default(uuid())
  companyId String
  type      String   // 'URL' | 'FILE'
  url       String?  // For URL extraction
  fileName  String?  // For File uploads
  fileContent String? // Base64 or Text content for Files
  frequency String   // 'once', 'hourly', 'daily', 'weekly'
  lastRun   DateTime?
  nextRun   DateTime?
  status    String   @default("active") // 'active', 'paused', 'error'
  error     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- GOOGLE CALENDAR & SCHEDULING ---

model GoogleCalendarConfig {
  id            String   @id @default(uuid())
  companyId     String   @unique
  company       Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // Auth
  accessToken   String?
  refreshToken  String?
  tokenExpiry   DateTime?
  
  // Settings
  primaryCalendarId String?
  timezone          String   @default("America/Sao_Paulo")
  officeHours       String?  // JSON: { "0": { start: "09:00", end: "18:00" }, ... }
  reminderBefore    Int?     // Minutes before to remind
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Specialist {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  name        String
  phone       String?
  email       String?
  calendarId  String?  // If different from primary
  active      Boolean  @default(true)
  
  // Relations
  appointmentTypes AppointmentType[] // Many-to-Many via implicit or explicit? Let's use implicit for simplicity or explicit if needed. 
  appointments     Appointment[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AppointmentType {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  name        String
  description String?
  duration    Int      @default(30) // Minutes
  color       String?
  active      Boolean  @default(true)
  
  specialists Specialist[]
  appointments Appointment[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Appointment {
  id          String   @id @default(uuid())
  companyId   String
  company     Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  googleEventId String?  @unique
  
  customerId  String?  // Link to ContactState if possible, but ContactState doesn't have ID exposed well. Storing Phone/Name.
  customerName String
  customerPhone String
  
  specialistId String?
  specialist   Specialist? @relation(fields: [specialistId], references: [id])
  
  typeId       String?
  type         AppointmentType? @relation(fields: [typeId], references: [id])
  
  startTime    DateTime
  endTime      DateTime
  status       String   @default("CONFIRMED") // CONFIRMED, CANCELLED, COMPLETED
  
  notes        String?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
